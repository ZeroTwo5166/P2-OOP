@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Opret Film</h2>
            <hr />
        </div>
@*        <div asp-validation-summary="All">
*@
        </div>
        <div class="mb-3">
            <label asp-for="Film_Titel">Film Titel</label>
            <input asp-for="Film_Titel" class="form-control"/>
            <span asp-validation-for="Film_Titel" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Instruktør">Instruktør</label>
            <input asp-for="Instruktør" class="form-control"/>
            <span asp-validation-for="Instruktør" class="text-danger"></span>

        </div>
        <br />
        <div>
            <label asp-for="Årstal">Årstal</label>
            <input asp-for="Årstal" class="form-control"/>
            <span asp-validation-for="Årstal" class="text-danger"></span>

        </div>
        <hr />


        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Tilbage</a>
    </div>
</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"/>

    }
}
